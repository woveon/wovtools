#!/usr/bin/env bash

DOECHO=1
  # --- output spew levels: 0 - quiet, 1 - normal, 2 - verbose

# Typical logging
function l_()
{
  if [ ${DOECHO} -ge 1 ]; then
    if [ "${WOV_DEBUGMODE}" == "1" ]; then
      echo "(`basename $0`:${BASH_LINENO}): ${*}"
    else
      echo "${*}"
        fi
        fi
}
# Verbose logging
function l_verbose()
{
  if [ ${DOECHO} -ge 2 ]; then
    if [ "${WOV_DEBUGMODE}" == "1" ]; then echo "(`basename $0`:${BASH_LINENO}): ${*}";
    else echo "${*}"; fi
      fi
}
# Error logging
function l_error()
{
  if [ "${WOV_DEBUGMODE}" == "1" ]; then echo "(`basename $0`:${BASH_LINENO})ERROR  : ${*}";
  else echo "ERROR  : ${*}"; fi
}
# Warning logging
function l_warn()
{
  if [ "${WOV_DEBUGMODE}" == "1" ]; then echo "(`basename $0`:${BASH_LINENO})WARNING: ${*}";
  else echo "WARNING: ${*}"; fi
}
