function wovdb_Docker_Postgres_File()
{
  l_error "TODO"
}

# --------------------------------------------------------------------- 
# --------------------------------------------------------------------- 
function wovdb_Docker_Postgres_Schema()
{
  local Re=
  local retval=1

  l_debug 'wovdb_Docker_Postgres_Schema'
  PGPASSWORD="${DB_password}" pg_dump -p ${DB_extport} -h "${DB_endpoint}" -U "${DB_username}" -d "${DB_database,,}" -s ; Re=$?
  if [ $Re -ne 0 ]; then
    l_error "...failed to connect to WovDB"
    wovdb_ConnectionIssue "${DB_extport}" "${DB_port}"
  else
    retval=0
  fi

  return $retval
}

# --------------------------------------------------------------------- 
# --------------------------------------------------------------------- 
function wovdb_Docker_Postgres_Schemahash()
{
  local Re=
  wovdb_COMMON_Postgres_Schemahash "Docker" ; Re=$?
  return $Re
}

# --------------------------------------------------------------------- 
# --------------------------------------------------------------------- 
function wovdb_Docker_Postgres_Version()
{
  local R=
  local Re=
  local retval=2
  #local tmpdb="${DB_database}"

  #DB_database="wovtools"
  R=$(DB_database="wovtools" wovdb_Docker_Postgres_Command "SELECT pver, sver from logs order by id DESC limit 1;") ; Re=$?
  #DB_database="${tmpdb}"
  if [ ${Re} -eq 0 ] ; then
    if [ "${R}" == "" ]; then echo "None";
    else
      #echo "R: ${R}"
      # trim header and footer from SQL, cut colum dividers, trim whitespace
      # echo "${R}" | tail -n +3 | head -n +1 | cut -d'|' -f5 | sed -e 's/^[[:space:]]*//' -e 's/[[:space:]]*$//'   

      # trim header and footer from SQL
      RR=$(echo "${R}" | tail -n +3 | head -n +1 )
      RR=${RR//|/}
      # echo "RR: ${RR}"
      echo "$RR" | grep "(0 rows)" > /dev/null
      if [ $? -eq 0 ]; then echo "None";
      else l_ "${RR}"; fi
    fi
    retval=0
  else
    l_ "${R}"
    l_error "Failed finding WovDB version."
  fi

  return $retval
}


# --------------------------------------------------------------------- 
# --------------------------------------------------------------------- 
function wovdb_Docker_Postgres_Log()
{
  local R=
  local Re=
  local retval=2

  R=$(DB_database="wovtools" wovdb_Docker_Postgres_Command "SELECT * from logs order by id DESC limit 1;") ; Re=$?
  if [ ${Re} -eq 0 ] ; then
    if [ "${R}" == "" ]; then echo "None";
    else
      # trim header and footer from SQL
      RR=$(echo "${R}" | tail -n +3 | head -n +1 )
      RR=${RR//|/}
      # echo "RR: ${RR}"
      echo "$RR" | grep "(0 rows)" > /dev/null
      if [ $? -eq 0 ]; then echo "None";
      else l_ "${RR}"; fi
    fi
    retval=0
  else
    l_ "${R}"
    l_error "Failed finding WovDB version."
  fi

  return $retval
}

