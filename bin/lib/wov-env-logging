#!/usr/bin/env bash

DOECHO=1
  # --- output spew levels: 0 - quiet, 1 - normal, 2 - verbose

function l_title() 
{
  local text="${*}"
  local testl=${#text}
  local head=""
  if [ "${WOV_DEBUGMODE}" == "1" ]; then
    head="(`basename ${BASH_SOURCE[1]}`:${BASH_LINENO}):"
  fi
  local headl=${#head}
  echo
  echo
  printf -- "=%.0s" `seq 1 ${FOLD}`
  figlet -w ${FOLD} -- "${*}"
  # printf -- "${text}\n" | fold -s -w $((FOLD-headl)) | sed -e "1,\$s/^/$head/"
  printf -- "=%.0s" `seq 1 ${FOLD}`
}

function l_subtitle() 
{
  local text="${*}"
  local testl=${#text}
  local head=""
  if [ "${WOV_DEBUGMODE}" == "1" ]; then
    head="(`basename ${BASH_SOURCE[1]}`:${BASH_LINENO}):"
  fi
  local headl=${#head}
  echo
  echo
  figlet -f "smslant"  -w ${FOLD} -- "${*}"
  # printf -- "${text}\n" | fold -s -w $((FOLD-headl)) | sed -e "1,\$s/^/$head/"
  printf -- "-%.0s" `seq 1 ${FOLD}`
}

function l_block() 
{
  local text="${*}"
  local testl=${#text}
  local head="> "
  if [ "${WOV_DEBUGMODE}" == "1" ]; then
    head="(`basename ${BASH_SOURCE[1]}`:${BASH_LINENO})> "
  fi
  local headl=${#head}
  printf -- "-%.0s" `seq 1 ${FOLD}`
  printf -- "${text}\n" | fold -s -w $((FOLD-headl)) | sed -e "1,\$s/^/$head/"
  printf -- "-%.0s" `seq 1 ${FOLD}`
}
function l_h1() 
{
  local text="${*}"
  local testl=${#text}
  local head=""
  if [ "${WOV_DEBUGMODE}" == "1" ]; then
    head="(`basename ${BASH_SOURCE[1]}`:${BASH_LINENO}):"
  fi
  local headl=${#head}
  echo ""
  printf -- "=%.0s" `seq 1 ${FOLD}`
  printf -- "${text}\n" | fold -s -w $((FOLD-headl)) | sed -e "1,\$s/^/$head/"
  printf -- "=%.0s" `seq 1 ${FOLD}`
}

function l_h2() 
{
  local text="${*}"
  local testl=${#text}
  local head=""
  if [ "${WOV_DEBUGMODE}" == "1" ]; then
    head="(`basename ${BASH_SOURCE[1]}`:${BASH_LINENO}):"
  fi
  local headl=${#head}
  echo ""
  printf -- "-%.0s" `seq 1 ${FOLD}`
  printf -- "${text}\n" | fold -s -w $((FOLD-headl)) | sed -e "1,\$s/^/$head/"
  printf -- "-%.0s" `seq 1 ${FOLD}`
}

function l_h3() 
{
  local text="${*}"
  local testl=${#text}
  local head=""
  if [ "${WOV_DEBUGMODE}" == "1" ]; then
    head="(`basename ${BASH_SOURCE[1]}`:${BASH_LINENO}):"
  fi
  local headl=${#head}
  echo ""
  printf -- "${text}\n" | fold -s -w $((FOLD-headl)) | sed -e "1,\$s/^/$head/"
  printf -- "-%.0s" `seq 1 ${FOLD}`
}


function _l_()
{
  local head="$1"
  local text="$2"
  local headl=${#head}
  local textl=${#text}

  # optimization here
  if [ $((headl+textl)) -le $((FOLD-headl)) ]; then printf -- "${head}${text}\n"
  else printf -- "${text}\n" | fold -s -w $((FOLD-headl)) | sed -e "1 s/^/$head/" -e "2,\$s/^/$(printf -- ' %.0s' `seq 2 $headl`}) /"; fi
}

# Typical logging
function l_()
{
  local head=""
  local text=
  if [ ${DOECHO} -ge 1 ]; then
    text="${*}"
    if [ "${WOV_DEBUGMODE}" == "1" ]; then
      head="(`basename ${BASH_SOURCE[1]}`:${BASH_LINENO}): "
    fi
    _l_ "${head}" "${text}"
  fi
}
function l_tab() 
{
  local head=$(printf -- " %.0s" `seq 1 $1`)
  shift
  local text="${*}"
  if [ "${WOV_DEBUGMODE}" == "1" ]; then head="(`basename ${BASH_SOURCE[1]}`:${BASH_LINENO})${head}"; fi
  # printf -- "${text}\n" | fold -s -w $((FOLD-headl)) | sed -e "1,\$s/^/$head/"
  _l_ "${head}" "${text}"
}
# Verbose logging
function l_verbose()
{
  local head="V:"
  local text=
  if [ ${DOECHO} -ge 2 ]; then
    text="${*}"
    if [ "${WOV_DEBUGMODE}" == "1" ]; then head="(`basename ${BASH_SOURCE[1]}`:${BASH_LINENO})V: "; fi
    # printf -- "${text}\n" | fold -s -w $((FOLD-headl)) | sed -e "1,\$s/^/$head/"
    _l_ "${head}" "${text}"
  fi
}

function l_debug()
{
  local head="DEBUG:"
  local text=
  if [ ${DOECHO} -ge 3 ]; then
    text="${*}"
    if [ "${WOV_DEBUGMODE}" == "1" ]; then head="(`basename ${BASH_SOURCE[1]}`:${BASH_LINENO})DEBUG: "; fi
    # printf -- "${text}\n" | fold -s -w $((FOLD-headl)) | sed -e "1,\$s/^/$head/" | >&2 cat 
    _l_ "${head}" "${text}"
  fi
}

# Error logging
function l_error()
{
  local text="${*}"
  local head="(`basename ${BASH_SOURCE[1]}`:${BASH_LINENO})ERROR  : "
  # printf -- "${text}\n" | fold -s -w $((FOLD-headl)) | sed -e "1,\$s/^/$head/" | >&2 cat
  _l_ "${head}" "${text}"
}
# Warning logging
function l_warn()
{
  local text="${*}"
  local head="(`basename ${BASH_SOURCE[1]}`:${BASH_LINENO})WARNING: "
  # printf -- "${text}\n" | fold -s -w $((FOLD-headl)) | sed -e "1,\$s/^/$head/" | >&2 cat
  _l_ "${head}" "${text}"
}
