#!/usr/bin/env bash

DOECHO=1
FOLD=140

if [ ! -e ${HOME}/.wovtools ]; then 
  printf "\n\nERROR: no .wovtools file in home directory.\n"
  exit 1
fi

if [ "$#" == 1 ]; then

  P=$(echo $1 | cut -d'/' -f1)
  D=$(jq -r ".projects.$P.dir" ${HOME}/.wovtools)
  D1=( ${1//\// } )
  D1=( "${D1[@]:1:}" )
#  echo ": '$D' / '$D1'"
  GO="$D$D1"
  cd $GO
else
  printf "\n\nERROR: bad number of parameters. Requires a project name.\n"
  exit 1
fi



